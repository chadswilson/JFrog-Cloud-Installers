{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "nicPrimaryName": {
        "type": "string"
      },
      "nicMemberName": {
        "type": "string"
      },
      "pipPrimaryName": {
        "type": "string"
      },
      "pipMemberName": {
        "type": "string"
      },
      "virtualNetworkName": {
        "type": "string"
      },
      "subnetPrimaryName": {
        "type": "string"
      },
      "subnetmemberName": {
        "type": "string"
      },
      "namingInfix": {
        "type": "string"
      },
      "location": {
        "type": "string"
      },
      "privatePIp": {
        "type": "string"
      },
      "privateMIp": {
        "type": "string"
      },
      "lbname": {
        "type": "string"
      },
      "feIpConfigPrimaryName": {
        "type": "string"
      },
      "feIpConfigMemberName": {
        "type": "string"
      },
      "bepoolPrimaryName": {
        "type": "string"
      },
      "bePoolMemberName": {
        "type": "string"
      },
      "natPoolPrimaryName": {
        "type": "string"
      },
      "feIpConfigPrimaryId": {
        "type": "string"
      },
      "natPoolMemberName": {
        "type": "string"
      },
      "feIpConfigMemberId": {
        "type": "string"
      },
      "bepoolPrimaryID": {
        "type": "string"
      },
      "bepoolMemberID": {
        "type": "string"
      },
      "httpProbePrimaryName": {
        "type": "string"
      },
      "httpsProbePrimaryName": {
        "type": "string"
      },
      "httpProbeMemberName": {
        "type": "string"
      },
      "httpsProbeMemberName": {
        "type": "string"
      }
    },
    "resources": [
      {
      "apiVersion": "2020-03-01",
      "type": "Microsoft.Network/networkInterfaces",
      "name": "[parameters('nicPrimaryName')]",
      "location": "[parameters('location')]",
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "privateIPAddress": "[parameters('privatePIp')]",
              "subnet": {
                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('virtualNetworkName'), parameters('subnetPrimaryName'))]"
              }
            }
          }
        ]
      }
    },
    {
      "apiVersion": "2020-03-01",
      "type": "Microsoft.Network/networkInterfaces",
      "name": "[parameters('nicMemberName')]",
      "location": "[parameters('location')]",
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "privateIPAddress": "[parameters('privateMIp')]",
              "subnet": {
                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('virtualNetworkName'), parameters('subnetMemberName'))]"
              }
            }
          }
        ]
      }
    },
    {
      "type": "Microsoft.Network/loadBalancers",
      "name": "[parameters('lbName')]",
      "location": "[parameters('location')]",
      "apiVersion": "2020-03-01",
      "sku": {
        "name": "Standard"
      },
      "tags":{
        "displayName": "Load Balancer"
      },
      "properties": {
        "frontendIPConfigurations": [
          {
            "name": "[parameters('feIpConfigPrimaryName')]",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "privateIPAddress": "[parameters('privatePIp')]",
              "publicIPAddress": {
                "id": "[resourceId('Microsoft.Network/publicIPAddresses', parameters('pipPrimaryName'))]"
              }
            }
          },
          {
            "name": "[parameters('feIpConfigMemberName')]",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "privateIPAddress": "[parameters('privateMIp')]",
              "publicIPAddress": {
                "id": "[resourceId('Microsoft.Network/publicIPAddresses', parameters('pipMemberName'))]"
              }
            }
          }
        ],
        "backendAddressPools": [
          {
            "name": "[parameters('bepoolPrimaryName')]"
          },
          {
            "name": "[parameters('bepoolMemberName')]"
          }
        ],
        "inboundNatPools": [
          {
            "name": "[parameters('natPoolPrimaryName')]",
            "properties": {
              "frontendIPConfiguration": {
                "id": "[parameters('feIpConfigPrimaryId')]"
              },
              "protocol": "tcp",
              "frontendPortRangeStart": 10022,
              "frontendPortRangeEnd": 11022,
              "backendPort": 22
            }
          },
          {
            "name": "[parameters('natPoolMemberName')]",
            "properties": {
              "frontendIPConfiguration": {
                "id": "[parameters('feIpConfigMemberId')]"
              },
              "protocol": "tcp",
              "frontendPortRangeStart": 20022,
              "frontendPortRangeEnd": 21022,
              "backendPort": 22
            }
          }
        ],
        "loadBalancingRules": [
          {
            "name": "HTTPRulePrimary",
            "properties": {
              "loadDistribution": "Default",
              "frontendIPConfiguration": {
                "id": "[parameters('feIpConfigPrimaryId')]"
              },
              "backendAddressPool": {
                "id": "[parameters('bepoolPrimaryID')]"
              },
              "protocol": "Tcp",
              "frontendPort": 80,
              "backendPort": 80,
              "enableFloatingIP": false,
              "idleTimeoutInMinutes": 5,
              "probe": {
                "id": "[resourceId('Microsoft.Network/loadBalancers/probes', parameters('lbName'), parameters('httpProbePrimaryName'))]"
              }
            }
          },
          {
            "name": "HTTPSRulePrimary",
            "properties": {
              "loadDistribution": "Default",
              "frontendIPConfiguration": {
                "id": "[parameters('feIpConfigPrimaryId')]"
              },
              "backendAddressPool": {
                "id": "[parameters('bepoolPrimaryID')]"
              },
              "protocol": "Tcp",
              "frontendPort": 443,
              "backendPort": 443,
              "enableFloatingIP": false,
              "idleTimeoutInMinutes": 5,
              "probe": {
                "id": "[resourceId('Microsoft.Network/loadBalancers/probes', parameters('lbName'), parameters('httpsProbePrimaryName'))]"
              }
            }
          },
          {
            "name": "HTTPRuleMember",
            "properties": {
              "loadDistribution": "Default",
              "frontendIPConfiguration": {
                "id": "[parameters('feIpConfigMemberId')]"
              },
              "backendAddressPool": {
                "id": "[parameters('bepoolMemberID')]"
              },
              "protocol": "Tcp",
              "frontendPort": 80,
              "backendPort": 80,
              "enableFloatingIP": false,
              "idleTimeoutInMinutes": 5,
              "probe": {
                "id": "[resourceId('Microsoft.Network/loadBalancers/probes', parameters('lbName'), parameters('httpProbeMemberName'))]"
              }
            }
          },
          {
            "name": "HTTPSRuleMember",
            "properties": {
              "loadDistribution": "Default",
              "frontendIPConfiguration": {
                "id": "[parameters('feIpConfigMemberId')]"
              },
              "backendAddressPool": {
                "id": "[parameters('bepoolMemberID')]"
              },
              "protocol": "Tcp",
              "frontendPort": 443,
              "backendPort": 443,
              "enableFloatingIP": false,
              "idleTimeoutInMinutes": 5,
              "probe": {
                "id": "[resourceId('Microsoft.Network/loadBalancers/probes', parameters('lbName'), parameters('httpsProbeMemberName'))]"
              }
            }
          }
        ],
        "probes": [
          {
            "name": "[parameters('httpProbePrimaryName')]",
            "properties": {
              "protocol": "Http",
              "requestPath": "/artifactory/api/system/ping",
              "port": 80,
              "intervalInSeconds": 60,
              "numberOfProbes": 5
            }
          },
          {
            "name": "[parameters('httpsProbePrimaryName')]",
            "properties": {
              "protocol": "Tcp",
              "port": 443,
              "intervalInSeconds": 60,
              "numberOfProbes": 5
            }
          },
          {
            "name": "[parameters('httpProbeMemberName')]",
            "properties": {
              "protocol": "Http",
              "requestPath": "/artifactory/api/system/ping",
              "port": 80,
              "intervalInSeconds": 60,
              "numberOfProbes": 5
            }
          },
          {
            "name": "[parameters('httpsProbeMemberName')]",
            "properties": {
              "protocol": "Tcp",
              "port": 443,
              "intervalInSeconds": 60,
              "numberOfProbes": 5
            }
          }
        ]
      }
    }
    ],
    "outputs": {
      "privatePIp": {
        "type": "string",
        "value": "[parameters('privatePIp')]"
      },
      "privateMIp": {
        "type": "string",
        "value": "[parameters('privateMIp')]"
      }
    }
}
  